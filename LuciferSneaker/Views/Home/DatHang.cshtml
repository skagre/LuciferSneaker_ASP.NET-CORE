@model GioHangViewModel
@{
    ViewData["Title"] = "DatHang";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container" style="margin: 50px auto;">
    <div class="row">
        <div class="col-md-5" style="width: 100%; background-color: #f5f5f5; padding: 30px 20px;">
            <h4>THÔNG TIN GIAO HÀNG</h4>
            <form asp-action="ThanhToan" method="POST">
                <input asp-for="@Model.DonHang.HoTen" type="text" placeholder="Họ và tên" style="width: 100%; padding: 5px 10px; margin: 10px 0;">
                <input asp-for="@Model.DonHang.Email" type="email" placeholder="Email" style="width: 100%; padding: 5px 10px; margin: 10px 0;">
                <input asp-for="@Model.DonHang.SoDienThoai" type="text" placeholder="Số điện thoại" style="width: 100%; padding: 5px 10px; margin: 10px 0;">
                <input asp-for="@Model.DonHang.DiaChi" type="text" placeholder="Địa chỉ" style="width: 100%; padding: 5px 10px; margin: 10px 0;">
                <a asp-action="GioHang" style="display: inline-block; margin-top: 10px;">Quay lại giỏ hàng</a>
                <button type="submit" class="btn btn-success" style="display: block; padding: 14px 12px; float: right; margin-top: 10px;">THANH TOÁN</button>
            </form>
        </div>
        <div class="col-md-7" style="width: 100%; padding: 30px 20px;">
            <h4 style="margin-bottom: 30px;">ĐƠN HÀNG CỦA BẠN</h4>
            <table style="width: 100%; text-align: center;">
                <thead>
                    <tr>
                        <th>&nbsp;</th>
                        <th>TÊN SẢN PHẨM</th>
                        <th>SL</th>
                        <th>GIÁ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model.GioHang.ChiTietGioHang)
                    {
                        <tr style="border-bottom: 1px solid black; height: 70px;">
                            <td style="width: 15%;">
                                <img src="@g.Giay.Anh" alt="lỗi ảnh" style="width: 70%;">
                            </td>
                            <td>@g.Giay.TenGiay</td>
                            <td style="width: 10%;">@g.SoLuong</td>
                            @{ decimal tong = @g.SoLuong * @g.Giay.Gia; }
                            <td style="width: 30%;">@tong.ToString("#,###") VND</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr style="height: 40px;">
                        <td colspan="3" style="text-align: left;">Tạm tính: </td>
                        <td colspan="1">@Model.TongTienGioHang.ToString("#,###") VND</td>
                    </tr>
                    <tr style="border-bottom: 1px solid black; height: 40px;">
                        <td colspan="3" style="text-align: left;">Phí vận chuyển: </td>
                        <td colspan="1">--</td>
                    </tr>
                    <tr style="height: 60px;">
                        <td colspan="3" style="text-align: left; font-size: 20px;">Tổng cộng: </td>
                        <td colspan="1" style="font-size: 20px; color: red;">@Model.TongTienGioHang.ToString("#,###") VND</td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>

