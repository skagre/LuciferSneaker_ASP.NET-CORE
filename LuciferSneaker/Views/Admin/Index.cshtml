@model TaiKhoan
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Lucifer Sneaker | Login</title>
    <link href="~/bootstrap-4.3.1-dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap-4.3.1-dist/js/bootstrap.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Muli&display=swap" rel="stylesheet">
</head>
<body>

    <style>
        * {
            padding: 0;
            margin: 0;
            font-family: 'Muli', sans-serif;
        }

        body {
            background-color: #f97f51;
        }
    </style>


    <div class="container" style="margin: 50px auto; background-color: #fff; padding: 70px 0; border-radius: 10px;">
        <div class="row text-center">
            <div class="col-md-8 offset-md-2">
                <img src="~/images/shoes.svg" alt="ảnh lỗi" style="width: 58px; ">
                <h4>Lucifer Sneaker</h4>
                <h2 style="font-weight: 700; text-align: center; margin: 30px 0;">ADMIN ĐĂNG NHẬP</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @if (ViewBag.SaiTkMk != null) {
                    <p style="color: red;">@ViewBag.SaiTkMk</p>
                }
                <form asp-action="Index" method="post">
                    <div class="form-group">
                        <label>Tài khoản</label>
                        <input asp-for="TenTaiKhoan" type="text" class="form-control" placeholder="Nhập tài khoản ...">
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu ...">
                    </div>
                    <button type="submit" class="btn btn-primary" style="float: right;">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>

    <small style="text-align: center; display: block;">Lucifer Sneaker | Shop Chuyên các sản phẩm về Sneakers và Fashions</small>

</body>
</html>